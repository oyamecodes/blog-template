---
import BaseLayout from '@/layouts/BaseLayout'
import ListPosts from '@/components/ListPosts'
import ListCategories from '@/components/ListCategories'
import TitlePage from '@/components/TitlePage'
import { sluglify, getCategories, getPosts } from '@/utils'
import { siteConfig } from '@/data/site.config'
import Pagination from '@/components/Pagination'

export async function getStaticPaths({ paginate }: any) {
	const categories = await getCategories()
	const allPosts = await getPosts()

	return categories.flatMap((category: string) => {
		const categorySlug = sluglify(category.toLowerCase())

		// Filter posts by comparing the slugified versions
		const filteredPosts = allPosts.filter(
			(post) => sluglify(post.data.category.toLowerCase()) === categorySlug
		)

		return paginate(filteredPosts, {
			params: {
				category: categorySlug
			},
			pageSize: siteConfig.paginationSize
		})
	})
}

const params = Astro.params
const { page } = Astro.props

// Find the actual category name by matching the slug
const categories = await getCategories()
const categoryName =
	categories.find((cat) => sluglify(cat.toLowerCase()) === params.category) || params.category

const posts = page.data
---

<BaseLayout title={categoryName}>
	<TitlePage title={categoryName} />
	<ListCategories activeCategory={params.category} />
	<ListPosts posts={posts} />
	<Pagination page={page} />
</BaseLayout>
