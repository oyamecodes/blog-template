---
import { Image } from 'astro:assets'
import FormattedDate from '@/components/FormattedDate'
import ArrowUp from '@/components/icons/ArrowUp'

const {
	id,
	data: { title, description, pubDate, heroImage, category },
	readTime,
	slug
} = Astro.props
---

<article
	class='grid grid-rows-[200px_auto] sm:grid-rows-[300px_auto] md:grid-rows-[300px_220px] min-h-full group relative overflow-hidden rounded-lg border-2 border-cyber-cyan/30 hover:border-cyber-cyan transition-all duration-300 bg-transparent'
>
	<div
		class='absolute inset-0 bg-gradient-to-r from-cyber-cyan/20 via-cyber-magenta/20 to-cyber-cyan/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none'
	>
	</div>

	<a class='relative overflow-hidden' href={`/post/${slug}/`}>
		<Image
			src={heroImage}
			width={600}
			height={200}
			format='webp'
			class='h-full min-w-full object-cover group-hover:scale-105 transition-all duration-500'
			alt={`img of ${title}`}
		/>

		<div
			class='z-30 absolute bottom-0 w-full h-24 bg-gradient-to-t from-dark-void via-dark-void/90 to-transparent'
		>
			<div class='absolute bottom-0 w-full p-4'>
				<div class='flex items-center justify-between gap-x-2'>
					<div class='flex flex-col gap-1'>
						<FormattedDate date={pubDate} class='text-cyber-cyan text-sm' />
						<span class='text-xs text-cyber-gold font-orbitron'>{readTime}</span>
					</div>
					<span class='text-sm font-orbitron text-cyber-magenta uppercase tracking-wider'
						>{category}</span
					>
				</div>
			</div>
		</div>
	</a>

	<div class='flex justify-between flex-col gap-4 md:gap-0 py-6 px-4 relative z-10'>
		<div class='flex flex-col gap-3'>
			<div class='flex flex-col gap-2'>
				<a
					class='text-2xl font-semibold font-orbitron tracking-wide text-white hover:text-cyber-cyan transition-colors'
					href={`/post/${slug}/`}
				>
					{title}
				</a>
			</div>

			<p class='overflow-hidden line-clamp-3 text-gray-400 mb-5'>
				{description}
			</p>
		</div>

		<footer class='flex justify-between items-center'>
			<a
				href={`/post/${slug}/`}
				class='flex justify-center items-center text-cyber-cyan border border-cyber-cyan px-4 py-2 rounded hover:bg-cyber-cyan hover:text-dark-void transition-all duration-300 font-semibold gap-2 group/btn'
				aria-label={`go to ${title}`}
			>
				JACK IN <span class='group-hover/btn:rotate-45 transition-transform duration-250'
					><ArrowUp width='18' height='18' /></span
				>
			</a>
		</footer>
	</div>
</article>

<script>
	import { animate } from 'motion'

	const images = document.querySelectorAll('article img')

	images.forEach((image) => {
		animate(
			image,
			{
				opacity: [0, 1],
				clipPath: ['polygon(0 0, 0 0, 0 100%, 0% 100%)', 'polygon(0 0, 100% 0, 100% 100%, 0 100%)']
			},
			{ duration: 1, easing: 'ease' }
		)
	})
</script>
