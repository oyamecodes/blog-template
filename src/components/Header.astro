---
import { MENU_LINKS } from '@/data/constants'
---

<header class='relative z-50 border-b border-cyber-cyan/30 bg-dark-void/80 backdrop-blur-sm'>
	<nav class='mx-auto max-w-6xl px-5 py-4'>
		<div class='flex items-center justify-between'>
			<a
				href='/'
				class='font-orbitron text-2xl font-bold text-cyber-cyan hover:opacity-80 transition-opacity'
			>
				NR://BLOG
			</a>

			<ul class='flex items-center gap-6'>
				{
					MENU_LINKS.map((link) => (
						<li>
							<a
								href={link.path}
								class='font-rajdhani text-lg uppercase tracking-wider text-white/70 hover:text-cyber-cyan transition-colors duration-300 relative group'
							>
								{link.title}
								<span class='absolute bottom-0 left-0 w-0 h-0.5 bg-cyber-cyan group-hover:w-full transition-all duration-300' />
							</a>
						</li>
					))
				}
			</ul>
		</div>
	</nav>
</header>
